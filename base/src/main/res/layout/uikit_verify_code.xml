<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <EditText
        android:id="@+id/et_verify_code_1"
        style="@style/Text_Subtitle1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@drawable/uikit_verify_code_bg"
        android:gravity="center"
        android:inputType="number"
        android:maxEms="1"
        android:maxLength="1"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/t.primary"
        android:textCursorDrawable="@drawable/uikit_input_cursor_edit"
        android:textDirection="locale"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@id/et_verify_code_2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2" />

    <EditText
        android:id="@+id/et_verify_code_2"
        style="@style/Text_Subtitle1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@drawable/uikit_verify_code_bg"
        android:gravity="center"
        android:inputType="number"
        android:maxEms="1"
        android:maxLength="1"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/t.primary"
        android:textCursorDrawable="@drawable/uikit_input_cursor_edit"
        android:textDirection="locale"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@id/et_verify_code_3"
        app:layout_constraintStart_toEndOf="@id/et_verify_code_1"
        tools:text="2" />

    <EditText
        android:id="@+id/et_verify_code_3"
        style="@style/Text_Subtitle1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@drawable/uikit_verify_code_bg"
        android:gravity="center"
        android:inputType="number"
        android:maxEms="1"
        android:maxLength="1"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/t.primary"
        android:textCursorDrawable="@drawable/uikit_input_cursor_edit"
        android:textDirection="locale"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@id/et_verify_code_4"
        app:layout_constraintStart_toEndOf="@id/et_verify_code_2"
        tools:text="2" />

    <EditText
        android:id="@+id/et_verify_code_4"
        style="@style/Text_Subtitle1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@drawable/uikit_verify_code_bg"
        android:gravity="center"
        android:inputType="number"
        android:maxEms="1"
        android:maxLength="1"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/t.primary"
        android:textCursorDrawable="@drawable/uikit_input_cursor_edit"
        android:textDirection="locale"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@id/et_verify_code_5"
        app:layout_constraintStart_toEndOf="@id/et_verify_code_3"
        tools:text="2" />

    <EditText
        android:id="@+id/et_verify_code_5"
        style="@style/Text_Subtitle1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@drawable/uikit_verify_code_bg"
        android:gravity="center"
        android:inputType="number"
        android:maxEms="1"
        android:maxLength="1"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/t.primary"
        android:textCursorDrawable="@drawable/uikit_input_cursor_edit"
        android:textDirection="locale"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@id/et_verify_code_6"
        app:layout_constraintStart_toEndOf="@id/et_verify_code_4"
        tools:text="2" />

    <EditText
        android:id="@+id/et_verify_code_6"
        style="@style/Text_Subtitle1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@drawable/uikit_verify_code_bg"
        android:gravity="center"
        android:inputType="number"
        android:maxEms="1"
        android:maxLength="1"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/t.primary"
        android:textCursorDrawable="@drawable/uikit_input_cursor_edit"
        android:textDirection="locale"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_verify_code_5"
        tools:text="2" />

</androidx.constraintlayout.widget.ConstraintLayout>