<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Chative" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorSecondaryVariant">@android:color/transparent</item>
        <item name="colorOnSecondary">@android:color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/bg1</item>
        <item name="android:statusBarColor">@color/bg1</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Customize your theme here. -->

        <!-- Android 16 适配 -->
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>

        <!-- 确保内容不被状态栏遮挡 -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">never</item>

        <!-- 高版本使用 fitsSystemWindows="true" 来适配系统窗口 -->
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>
