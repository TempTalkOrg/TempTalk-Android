    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/loginIcon"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/login_logo_no_padding"
        android:tint="@color/login_logo_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/t.primary"
        android:textSize="@dimen/login_title_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginIcon"
        tools:text="@string/login_sign_to_chative" />

