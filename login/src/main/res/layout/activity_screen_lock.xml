<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/login_logo_no_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/settings_enter_passcode"
        android:textColor="@color/t.primary"
        android:textSize="@dimen/login_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_error_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:textColor="@color/t.error"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="@string/settings_passcode_attempts_delay"
        tools:visibility="visible" />

    <!-- Passcode Input -->
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_passcode1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/line"
        android:gravity="center"
        android:inputType="numberPassword"
        android:letterSpacing="0.2"
        android:maxLength="10"
        android:textColor="@color/t.primary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_error_tips"
        tools:text="123"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/login_handle_zone_bg"
        android:clickable="false"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/settings_passcode_submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/login_next_size"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_passcode1"
        tools:visibility="visible" />

    <!-- Pattern Lock View -->
    <com.difft.android.base.widget.PatternLockView
        android:id="@+id/pattern_lock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_error_tips"
        app:layout_constraintBottom_toTopOf="@id/ll_options"
        app:layout_constraintVertical_bias="0"
        tools:visibility="visible" />

    <!-- Options - 复用的底部选项 -->
    <LinearLayout
        android:id="@+id/ll_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_submit">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_switch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_switch_to_pattern"
            android:textColor="@color/t.third"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:id="@+id/v_separator"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/t.third"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_forget_passcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_forget_passcode_or_pattern"
            android:textColor="@color/t.third"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Back Button -->
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/chat_contact_detail_ic_back"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/t.primary"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
