<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/chat_contact_detail_ic_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:tint="@color/t.primary" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edittext_search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/search_input_bg_search_input"
            android:drawableStart="@drawable/search_input_ic_search_input"
            android:drawablePadding="6dp"
            android:hint="@string/search_default_hint"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="10dp"
            android:paddingEnd="40dp"
            android:textColor="@color/t.primary"
            android:textColorHint="@color/t.disable"
            android:textSize="14sp"
            app:drawableTint="@color/icon"
            app:layout_constraintBottom_toBottomOf="@+id/ib_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_back"
            app:layout_constraintTop_toTopOf="@+id/ib_back">

            <requestFocus />
        </androidx.appcompat.widget.AppCompatEditText>

        <!--        <View-->
        <!--            android:id="@+id/view_separator"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:layout_marginTop="12dp"-->
        <!--            android:background="@color/line"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/edittext_search_input" />-->

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@null"
            android:src="@drawable/search_input_ic_search_clear"
            android:tint="@color/t.secondary"
            app:layout_constraintBottom_toBottomOf="@+id/edittext_search_input"
            app:layout_constraintEnd_toEndOf="@+id/edittext_search_input"
            app:layout_constraintTop_toTopOf="@+id/edittext_search_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/search_messages_default_tips"
            android:textColor="@color/t.primary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_search_input" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_chat_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:itemCount="10"
            tools:listitem="@layout/layout_item_group_member" />

    </FrameLayout>
</LinearLayout>