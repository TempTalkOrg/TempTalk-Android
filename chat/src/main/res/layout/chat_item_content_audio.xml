<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.difft.android.chat.widget.VoiceMessageView
        android:id="@+id/voice_message_view"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/chat_message_confidential_bg"
        android:gravity="center"
        android:text="@string/chat_tap_to_view"
        android:textColor="@color/t.white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/voice_message_view"
        app:layout_constraintEnd_toEndOf="@+id/voice_message_view"
        app:layout_constraintStart_toStartOf="@+id/voice_message_view"
        app:layout_constraintTop_toTopOf="@+id/voice_message_view" />

</androidx.constraintlayout.widget.ConstraintLayout>