<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.difft.android.chat.widget.AttachMessageView
        android:id="@+id/attach_content_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/t.primary"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/attach_content_view"
        app:layout_constraintTop_toBottomOf="@+id/attach_content_view"
        tools:text="2222222 2222222 2222222 2222222 2222222 2222222 2222222 2222222 2222222 2222222 2222222"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/v_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/chat_message_confidential_bg"
        android:gravity="center"
        android:text="@string/chat_tap_to_view"
        android:textColor="@color/t.white"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>