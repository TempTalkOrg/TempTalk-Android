<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="22dp"
        android:src="@drawable/chat_icon_close"
        android:tint="@color/icon" />

    <com.difft.android.chat.common.GroupAvatarView
        android:id="@+id/imageview_group"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_group_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/t.primary"
        android:textSize="16sp"
        tools:text="Group Name" />

    <com.difft.android.base.widget.ChativeButton
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="@string/group_enter_group"
        android:textSize="16sp" />

</LinearLayout>