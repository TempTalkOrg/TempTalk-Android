<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    app:layout_constraintTop_toBottomOf="@+id/v_head_bottom_line">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_key"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textColor="@color/t.secondary"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Local Time: " />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/t.primary"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_key"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12:00AM(UTC+4)" />
</androidx.constraintlayout.widget.ConstraintLayout>