<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg3" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

    <!-- Content Layer -->
    <item
        android:bottom="8dp"
        android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg3" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>
