<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/background_gradient_with_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 邊框層 -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#CC5E6673" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>

    <!-- 漸層背景層 -->
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:startColor="#F84135"
                android:endColor="#FE7566"
                android:type="linear" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</layer-list>
